<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mx.fei.coilvicapp.gui.controllers.RegisterProfessorController">
   <children>
      <HBox alignment="CENTER" prefHeight="77.0" prefWidth="400.0">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="Registrar Profesor">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <VBox maxWidth="-Infinity" prefHeight="346.0" prefWidth="266.0">
         <children>
            <Label prefHeight="27.0" prefWidth="44.0" text="Nombre" />
            <TextField fx:id = "nameTextField" prefHeight="12.0" prefWidth="266.0" promptText="Ej. Rafael" />
            <Label prefHeight="27.0" prefWidth="93.0" text="Apellido paterno" />
            <TextField fx:id = "paternalSurnameTextField" prefHeight="12.0" prefWidth="266.0" promptText="Ej. Limon" />
            <Label prefHeight="27.0" prefWidth="93.0" text="Apellido materno" />
            <TextField fx:id = "maternalSurnameTextField" prefHeight="12.0" prefWidth="266.0" promptText="Ej. Lima" />
            <Label prefHeight="27.0" prefWidth="93.0" text="Correo" />
            <TextField fx:id = "emailTextField" prefHeight="12.0" prefWidth="266.0" promptText="Ej. ejemplo@gmail.com" />
            <Label prefHeight="27.0" prefWidth="93.0" text="Genero" />
            <ComboBox fx:id = "genderComboBox" prefHeight="26.0" prefWidth="273.0" />
            <Label prefHeight="27.0" prefWidth="93.0" text="Telefono" />
            <TextField fx:id = "phoneNumberTextField" prefHeight="12.0" prefWidth="266.0" promptText="Ej. xx-xx-xx-xx-xx" />
            <Label prefHeight="27.0" prefWidth="93.0" text="Universidad" />
            <ComboBox fx:id = "universitiesComboBox" prefHeight="28.0" prefWidth="266.0" />
         </children>
      </VBox>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="40.0">
         <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancel" text="Cancelar" />
            <Button fx:id="acceptButton" lineSpacing="40.0" mnemonicParsing="false" onAction="#accept" text="Aceptar" />
         </children>
      </HBox>
   </children>
</VBox>
